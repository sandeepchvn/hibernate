package food_app.dao;

import java.util.Scanner;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.EntityTransaction;
import javax.persistence.Persistence;

import food_app.dto.FoodOrder;
import food_app.dto.Menu;
import food_app.dto.Userr;

public class FoodOrderDao {
	EntityManagerFactory emf=Persistence.createEntityManagerFactory("dev");
	EntityManager em=emf.createEntityManager();
	EntityTransaction et=em.getTransaction();
	Scanner sc=new Scanner(System.in);
	public void saveFoodOrder() {
		FoodOrder foodOrder=new FoodOrder();
		foodOrder.setId(30);
		foodOrder.setStatus("done");
		foodOrder.setTotalPrice(3456.45);
		foodOrder.setOrderCreatedTime("10:23");
		foodOrder.setOrderDeliveryTime("3:23");
		foodOrder.setCustomerName("gavan");
		foodOrder.setContactNumber(3433);
		et.begin();
		em.persist(foodOrder);
		et.commit();
		System.out.println("saved--------------!");
	}
	public FoodOrder findFoodOrder() {
		System.out.println("enter the Food Order id to get Food Order");
		FoodOrder foodOrder=em.find(FoodOrder.class, sc.nextInt());
		if(foodOrder != null) {
			return foodOrder;
		}
		return null;
	}
	public void deleteFoodOrder() {
		FoodOrder foodOrder=em.find(FoodOrder.class, 30);
		if(foodOrder != null) {
			et.begin();
			em.remove(foodOrder);
			et.commit();
		}
	}
	public void updateFoodOrder() {
		FoodOrder foodOrder=em.find(FoodOrder.class, 30);
		if(foodOrder != null) {
			foodOrder.setContactNumber(673);
			et.begin();
			em.merge(foodOrder);
			et.commit();
		}
	}
	
}
